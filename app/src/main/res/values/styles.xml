<resources>

    <style name="EBigTextView" >
        <item name="android:textSize">36px</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="BigTextView" >
        <item name="android:textSize">32px</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="NormalTextView" >
        <item name="android:textSize">28px</item>

    </style>
    <style name="SmallTextView" >
        <item name="android:textSize">26px</item>
    </style>

    <style name="IconImageView" >
        <item name="android:padding">8px</item>
    </style>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!-- 解决activity加载延迟导致黑屏-->
        <item name="android:windowIsTranslucent">true</item>
        <!--<item name="android:windowAnimationStyle">@style/activityAnim</item>-->
    </style>

    <!--

    第一个表示新的activity创建进入效果，
    第2个表示activity还没有finish()下退出效果
    第3个表示上一个activity返回进入效果
   第4个表示的是activity finish()之后退出效果-->
    <style name="activityAnim" parent="@android:style/Animation">
        <item name="android:activityOpenEnterAnimation">@anim/slide_right_in</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_right_in</item>
        <item name="android:activityCloseEnterAnimation">@anim/slide_right_in</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_right_in</item>
    </style>

    <style name="popwin_anim_style">
        <item name="android:windowEnterAnimation">@anim/bottom_popupwindow_show</item>
        <item name="android:windowExitAnimation">@anim/bottom_popupwindow_hidden</item>
    </style>

    <style name="dialog_anim_style">
        <item name="android:windowEnterAnimation">@anim/fade_in</item>
        <item name="android:windowExitAnimation">@anim/fade_out</item>
    </style>


    <style name="DialogNoBg" parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/half_black</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:background">#00000000</item>
        <!-- 设置无遮罩层 -->
        <item name="android:backgroundDimEnabled">false</item>

    </style>

    <!-- loganDialog的样式 -->
    <style name="DialogLogin" parent="android:style/Theme.Dialog">
        <item name="android:background">#00000000</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <!-- 模糊 -->
    </style>

    <!-- 透明的Activity -->
    <style name="Theme.Transparent" parent="android:Theme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>


</resources>
