<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:ledt="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <com.yiyekeji.coolschool.widget.TitleBar
        android:layout_width="match_parent"
        android:id="@+id/title_bar"
        android:layout_height="wrap_content"/>
    <com.yiyekeji.coolschool.widget.LableEditView
        android:paddingLeft="5px"
        android:paddingRight="5px"
        android:id="@+id/ledt_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        ledt:edtText="标题，不超过30字"
        ledt:text="标题"/>
    <View
        android:background="@color/gray"
        android:layout_width="match_parent"
        android:layout_height="1px"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="88px">
        <TextView
            android:gravity="center"
            android:text="课程"
            android:paddingLeft="15px"
            android:paddingRight="15px"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            style="@style/BigTextView"
            android:textColor="@color/black"
            />
        <Spinner
            android:padding="5px"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/sp_course"
            />
    </LinearLayout>
    <View
        android:background="@color/gray"
        android:layout_width="match_parent"
        android:layout_height="1px"/>
    <LinearLayout
        android:paddingLeft="20px"
        android:paddingRight="20px"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="240px">
        <TextView
            android:paddingTop="10px"
            android:gravity="center_horizontal"
            android:text="详情"
            style="@style/BigTextView"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>
        <EditText
            android:id="@+id/edt_descrition"
            android:gravity="top"
            android:paddingLeft="10px"
            android:paddingRight="10px"
            android:layout_marginTop="10px"
            android:layout_marginBottom="10px"
            android:layout_marginLeft="20px"
            android:layout_weight="1"
            android:layout_width="0dp"
            style="@style/BigTextView"
            android:maxLength="300"
            android:hint="填写其他信息"
            android:lines="3"
            android:background="@drawable/bg_0radiu_whitesolid_graytroke"
            android:layout_height="match_parent"/>
    </LinearLayout>

    <Space
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>
    <LinearLayout
        android:layout_marginBottom="10px"
        android:paddingLeft="20px"
        android:paddingRight="20px"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="80px">
        <TextView
            android:layout_weight="1"
            android:text="取消"
            android:gravity="center"
            android:id="@+id/tv_cancel"
            style="@style/BigTextView"
            android:textColor="@color/white"
            android:background="@color/background_gray"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>
        <Space
            android:layout_width="50px"
            android:layout_height="match_parent"/>
        <TextView
            android:layout_weight="1"
            android:text="确定"
            android:gravity="center"
            android:id="@+id/tv_confirm"
            style="@style/BigTextView"
            android:textColor="@color/white"
            android:background="@color/theme_red"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>
    </LinearLayout>
</LinearLayout>