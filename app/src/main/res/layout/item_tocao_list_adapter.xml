<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:background="@color/white"
    android:id="@+id/ll_parent"
    android:layout_height="wrap_content"
    >
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent">
        <TextView
            android:padding="15px"
            android:id="@+id/tv_content"
            android:text="asdasdqwecxgaaaaaaaaaaaaaaaaaaaaaaaaaaxxxxxxxxxxxxdfhyuefccaaaaaaaaaaaaaaaaaaaaaarewwwwwwwwwwwwwwwwwwwwwikhnm"
            style="@style/BigTextView"
            android:maxLines="2"
            android:ellipsize="end"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <Space
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp" />
        <LinearLayout
            android:paddingLeft="15px"
            android:paddingRight="15px"
            android:paddingBottom="5px"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_postMan"
                android:text="发帖人"
                android:layout_marginRight="15px"
                android:gravity="center_vertical"
                style="@style/NormalTextView"
                android:textColor="@color/gray_text"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>
            <ImageView
                android:src="@mipmap/ic_man"
                android:id="@+id/iv_sex"
                android:text="发帖人"
                android:gravity="center_vertical"
                android:layout_width="26px"
                android:layout_height="match_parent"/>
            <Space
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent" />
            <TextView
                android:id="@+id/tv_commentCount"
                style="@style/NormalTextView"
                android:layout_marginRight="15px"
                android:text="评论数"
                android:gravity="center_vertical"
                android:textColor="@color/gray_text"
                android:layout_width="wrap_content"
                android:drawablePadding="5px"
                android:layout_height="match_parent"/>
            <TextView
                android:id="@+id/tv_date"
                style="@style/NormalTextView"
                android:layout_marginRight="15px"
                android:text="日期"
                android:gravity="center_vertical"
                android:textColor="@color/gray_text"
                android:layout_width="wrap_content"
                android:drawablePadding="5px"
                android:layout_height="match_parent"/>
        </LinearLayout>
    </LinearLayout>
    <ImageView
        android:id="@+id/iv_tuCaoImg"
        android:scaleType="centerCrop"
        android:layout_width="190px"
        android:src="@mipmap/success"
        android:layout_height="190px"/>
</LinearLayout>