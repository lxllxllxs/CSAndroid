<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:ledt="http://schemas.android.com/apk/res-auto"
              xmlns:cb="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <com.yiyekeji.coolschool.widget.TitleBar
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:paddingRight="20px"
        android:paddingLeft="20px"
        android:textSize="22px"
        android:text="第一张为主图，其余为详情图"
        android:textColor="@color/theme_red"
        android:background="@color/yellow_light"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="50px"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_imgs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <View
        android:background="@color/gray"
        android:layout_width="match_parent"
        android:layout_height="1px"/>

    <com.yiyekeji.coolschool.widget.LableEditView
        android:paddingLeft="5px"
        android:paddingRight="5px"
        android:id="@+id/ledt_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        ledt:edtText="填写产品标题，不超过20字"
        ledt:text="标题    "/>
    <View
        android:background="@color/gray"
        android:layout_width="match_parent"
        android:layout_height="1px"/>
    <LinearLayout
        android:id="@+id/ll_category"
        android:background="@drawable/bg_selector_gray_white"
        android:paddingLeft="20px"
        android:paddingRight="20px"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="87px">
        <TextView
            android:gravity="center_vertical"
            android:text="分类"
            style="@style/BigTextView"
            android:textColor="@color/black"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>

        <TextView
            android:id="@+id/tv_category"
            android:gravity="center_vertical"
            style="@style/BigTextView"
            android:textColor="@color/gray_text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>
        <ImageView
            android:src="@mipmap/arrow_right_gray"
            android:layout_width="44px" style="@style/IconImageView"
            android:layout_height="match_parent"/>
    </LinearLayout>
    <View
        android:background="@color/gray"
        android:layout_width="match_parent"
        android:layout_height="1px"/>
    <LinearLayout
        android:id="@+id/ll_model"
        android:background="@drawable/bg_selector_gray_white"
        android:paddingLeft="20px"
        android:paddingRight="20px"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="87px">
        <TextView
            android:gravity="center_vertical"
            android:text="规格"
            style="@style/BigTextView"
            android:textColor="@color/black"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>
        <ImageView
            android:src="@mipmap/arrow_right_gray"
            android:layout_width="44px" style="@style/IconImageView"
            android:layout_height="match_parent"/>
    </LinearLayout>
    <View
        android:background="@color/gray"
        android:layout_width="match_parent"
        android:layout_height="1px"/>
    <com.yiyekeji.coolschool.widget.LableEditView
        android:paddingLeft="5px"
        android:paddingRight="5px"
        android:id="@+id/ledt_util"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        ledt:edtText="计量单位"
        ledt:text="单位    "/>
    <View
        android:background="@color/gray"
        android:layout_width="match_parent"
        android:layout_height="1px"/>
    <LinearLayout
        android:paddingLeft="20px"
        android:paddingRight="20px"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="240px">
        <TextView
            android:layout_marginTop="10px"
            android:paddingTop="10px"
            android:gravity="center_horizontal"
            android:text="详情"
            style="@style/BigTextView"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>
        <EditText
            android:id="@+id/edt_descrition"
            android:gravity="top"
            android:padding="10px"
            android:layout_marginTop="10px"
            android:layout_marginBottom="10px"
            android:layout_marginLeft="20px"
            android:layout_weight="1"
            android:layout_width="0dp"
            style="@style/BigTextView"
            android:maxLength="300"
            android:hint="填写其他信息"
            android:background="@drawable/bg_0radiu_whitesolid_graytroke"
            android:layout_height="match_parent"/>
    </LinearLayout>



    <Space
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>
    <LinearLayout
        android:layout_marginBottom="10px"
        android:paddingLeft="20px"
        android:paddingRight="20px"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="80px">
        <TextView
            android:layout_weight="1"
            android:text="取消"
            android:gravity="center"
            android:id="@+id/tv_cancel"
            style="@style/BigTextView"
            android:textColor="@color/white"
            android:background="@color/background_gray"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>
        <Space
            android:layout_width="50px"
            android:layout_height="match_parent"/>
        <TextView
            android:layout_weight="1"
            android:text="确定"
            android:gravity="center"
            android:id="@+id/tv_confirm"
            style="@style/BigTextView"
            android:textColor="@color/white"
            android:background="@color/theme_red"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>
    </LinearLayout>
</LinearLayout>