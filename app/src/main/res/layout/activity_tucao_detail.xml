<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.yiyekeji.coolschool.widget.TitleBar
        android:id="@+id/title_bar"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <ScrollView
        android:layout_below="@+id/title_bar"
        android:layout_width="match_parent"
        android:fillViewport="true"
        android:paddingBottom="80px"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:paddingLeft="15px"
                    android:paddingRight="15px"
                    android:paddingBottom="5px"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tv_postMan"
                        android:text="发帖人"
                        android:layout_marginRight="15px"
                        android:gravity="center_vertical"
                        style="@style/NormalTextView"
                        android:textColor="@color/gray_text"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"/>
                    <ImageView
                        android:src="@mipmap/ic_man"
                        android:id="@+id/iv_sex"
                        android:text="某同学"
                        android:gravity="center_vertical"
                        android:layout_width="26px"
                        android:layout_height="match_parent"/>
                    <Space
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent" />
                    <TextView
                        android:id="@+id/tv_date"
                        style="@style/NormalTextView"
                        android:layout_marginRight="15px"
                        android:text="日期"
                        android:gravity="center_vertical"
                        android:textColor="@color/gray_text"
                        android:layout_width="wrap_content"
                        android:drawablePadding="5px"
                        android:layout_height="match_parent"/>
                </LinearLayout>
                <TextView
                    android:paddingLeft="15px"
                    android:paddingRight="15px"
                    android:paddingBottom="15px"
                    android:id="@+id/tv_content"
                    android:text="asdasdqwecxgaaaaaaaaaaaaaaaaaaaaaaaaaaxxxxxxxxxxxxdfhyuefccaaaaaaaaaaaaaaaaaaaaaarewwwwwwwwwwwwwwwwwwwwwikhnm"
                    style="@style/BigTextView"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:textColor="@color/black"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:layout_marginLeft="15px"
                    android:layout_marginRight="15px"
                    android:scaleType="centerCrop"
                    android:visibility="gone"
                    android:id="@+id/iv_detail"
                    android:layout_width="match_parent"
                    android:layout_height="750px"/>
                <Space
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"/>
                <LinearLayout
                    android:gravity="right"
                    android:layout_marginRight="15px"
                    android:orientation="horizontal"
                    android:paddingTop="15px"
                    android:paddingBottom="5px"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:src="@mipmap/ic_view"
                        android:gravity="center_vertical"
                        android:layout_width="32px"
                        android:layout_marginRight="5px"
                        android:layout_height="match_parent"/>
                    <TextView
                        android:id="@+id/tv_viewCount"
                        style="@style/SmallTextView"
                        android:text="浏览量"
                        android:gravity="center_vertical"
                        android:textColor="@color/gray_text"
                        android:layout_width="wrap_content"
                        android:layout_marginRight="15px"
                        android:layout_height="wrap_content"/>
                    <ImageView
                        android:layout_marginRight="5px"
                        android:src="@mipmap/ic_comment"
                        android:gravity="center_vertical"
                        android:layout_width="32px"
                        android:layout_height="match_parent"/>
                    <TextView
                        android:layout_marginRight="15px"
                        android:id="@+id/tv_commentCount"
                        style="@style/SmallTextView"
                        android:text="评论数"
                        android:gravity="center_vertical"
                        android:textColor="@color/gray_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </LinearLayout>
            <View
                android:background="@color/gray"
                android:layout_width="match_parent"
                android:layout_height="20px"/>
            <FrameLayout
                android:layout_width="match_parent"
                android:minHeight="300px"
                android:layout_height="wrap_content">
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:visibility="gone"
                    android:id="@+id/tv_emptyView"
                    style="@style/NormalTextView"
                    android:text="暂无评论"
                    android:gravity="center"
                    android:textColor="@color/gray_text"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </FrameLayout>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@color/gray"
        android:layout_width="match_parent"
        android:layout_height="80px"
        android:paddingTop="10px"
        android:paddingBottom="10px"
        android:paddingLeft="20px"
        android:paddingRight="20px"
        >
        <EditText
            android:background="@drawable/bg_whitesolid_4radius_whitestroke"
            android:id="@+id/edt_content"
            android:layout_weight="1"
            android:padding="5px"
            style="@style/NormalTextView"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>
        <TextView
            android:layout_marginLeft="20px"
            android:id="@+id/tv_comment"
            android:text="评论"
            style="@style/BigTextView"
            android:textColor="@color/gray"
            android:paddingLeft="15px"
            android:gravity="center"
            android:paddingRight="15px"
            android:background="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>
    </LinearLayout>
</RelativeLayout>